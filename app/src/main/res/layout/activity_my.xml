<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MyActivity">
  <android.support.v7.widget.CardView
      android:id="@+id/cv"
      android:layout_width="match_parent"
      android:layout_height="55dp"
      app:cardCornerRadius="0dp"
      >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkblue">
      <ImageView
          android:id="@+id/imageback"
          android:layout_width="30dp"
          android:layout_height="25dp"
          android:layout_marginLeft="15dp"
          android:layout_centerVertical="true"
          android:src="@drawable/ic_left_arrow"/>
      <TextView
          android:id="@+id/logo"
          android:layout_width="wrap_content"
          android:layout_height="fill_parent"
          android:gravity="center"
          android:text="My Activity"
          android:layout_centerInParent="true"
          android:layout_gravity="center"
          android:layout_marginTop="0dp"
          android:textSize="@dimen/title_txt_size"
          android:textColor="@color/white"/>

      <TextView
          android:id="@+id/tv_online"
          android:layout_width="15dp"
          android:layout_height="15dp"
          android:layout_marginRight="15dp"
          android:layout_centerVertical="true"
          android:background="@drawable/circle_green"
          android:layout_alignParentRight="true"
          />
    </RelativeLayout>
  </android.support.v7.widget.CardView>

  <!--<TextView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:text="My activity"
      android:layout_gravity="center"
      android:gravity="center"
/>-->
  <RelativeLayout
      android:id="@+id/rl_main"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
        <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MyActivity" />

    <TextView
    android:id="@+id/tv_go_online"
    android:layout_width="120dp"
    android:layout_height="40dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="@dimen/margin_10"
    android:background="@drawable/recieve_loc_blue_bg"
    android:text="Go Live"
    android:textColor="@color/white"
    android:gravity="center"
    android:textSize="@dimen/margin_15"
    android:elevation="@dimen/margin_5"
    android:visibility="gone"
    />

   <RelativeLayout
       android:id="@+id/rl_camp_info"
       android:layout_width="50dp"
       android:layout_height="50dp"
android:layout_centerVertical="true"
       android:visibility="gone"

       >
     <!--android:layout_above="@+id/ly_accept"-->
     <ImageView
         android:layout_width="30dp"
         android:layout_height="30dp"
        android:src="@drawable/camp_info"
         android:layout_centerInParent="true"
         />
   </RelativeLayout>
    <LinearLayout
        android:id="@+id/ly_accept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_background"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="@dimen/margin_5"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_10"
        android:visibility="gone"
        >

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
       >
        <TextView
            android:id="@+id/tv_compaign_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="14dp"
            android:textColor="#000"

            android:text="Campaign Name"/>
        <TextView
            android:id="@+id/tv_compaign_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:textSize="14dp"
            android:layout_toRightOf="@+id/tv_compaign_name_txt"
            android:text="test"/>
      </RelativeLayout>
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
       >
        <TextView
            android:id="@+id/tv_compaign_amount_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="14dp"
            android:textColor="#000"

            android:text="Amount"/>
        <TextView
            android:id="@+id/tv_compaign_amount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:textSize="14dp"
            android:layout_toRightOf="@+id/tv_compaign_amount_txt"
            android:text="INR 1000"/>
      </RelativeLayout>
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
       >
        <TextView
            android:id="@+id/tv_compaign_loc_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="14dp"
            android:textColor="#000"
            android:text="Location"/>
        <TextView
            android:id="@+id/tv_compaign_loc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:textSize="14dp"
            android:layout_toRightOf="@+id/tv_compaign_loc_txt"
            android:text="Palasiya"/>
      </RelativeLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
       >
        <TextView
            android:id="@+id/tv_compaign_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="14dp"
            android:textColor="#000"
            android:text="Time Period"/>
        <TextView
            android:id="@+id/tv_compaign_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:textSize="14dp"
            android:layout_toRightOf="@+id/tv_compaign_time_txt"
            android:text="10 Days"/>
      </RelativeLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/lightgrayview"
          android:layout_marginTop="@dimen/margin_10"
          android:layout_gravity="center"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="horizontal"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          >
        <TextView
            android:id="@+id/tv_yes"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Yes"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="@color/white"

            android:padding="@dimen/margin_10"
            android:background="@drawable/recieve_loc_bg"
            />

        <TextView
            android:id="@+id/tv_no"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="No"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:background="@drawable/recieve_loc_red_bg"
            />

      </LinearLayout>
    </LinearLayout>
  </RelativeLayout>
</LinearLayout>