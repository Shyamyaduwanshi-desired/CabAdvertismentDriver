<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:background="@drawable/screenimglogin">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/iconlogin"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cab Advertisment"
            android:gravity="center"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="130dp">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="20dp"
            card_view:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/circle_button"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:src="@drawable/lock"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We have sent you an access code for mobile number verification"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/darkblue"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:textStyle="bold"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/otprelative_id"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:layout_marginTop="20dp">
                    <EditText

                        android:layout_width="35sp"
                        android:layout_height="35sp"
                        android:id="@+id/code_one"
                        android:inputType="number"
                        android:background="@drawable/otp_background"
                        android:layout_marginTop="30dp"
                        android:maxLength="1"
                        android:textAlignment="center"
                        android:imeOptions="actionNext"/>
                    <EditText
                        android:layout_width="35sp"
                        android:layout_height="35sp"
                        android:id="@+id/code_two"
                        android:layout_toRightOf="@+id/code_one"
                        android:layout_marginLeft="10sp"
                        android:inputType="number"
                        android:background="@drawable/otp_background"
                        android:layout_marginTop="30dp"
                        android:maxLength="1"
                        android:textAlignment="center"
                        android:imeOptions="actionNext"/>
                    <EditText
                        android:layout_width="35sp"
                        android:layout_height="35sp"
                        android:id="@+id/code_three"
                        android:layout_toRightOf="@+id/code_two"
                        android:layout_marginLeft="10sp"
                        android:inputType="number"
                        android:background="@drawable/otp_background"
                        android:layout_marginTop="30dp"
                        android:maxLength="1"
                        android:textAlignment="center"
                        android:imeOptions="actionNext"/>
                    <EditText
                        android:layout_width="35sp"
                        android:layout_height="35sp"
                        android:id="@+id/code_four"
                        android:layout_toRightOf="@+id/code_three"
                        android:layout_marginLeft="10sp"
                        android:inputType="number"
                        android:background="@drawable/otp_background"
                        android:layout_marginTop="30dp"
                        android:maxLength="1"
                        android:textAlignment="center"
                        android:imeOptions="actionNext"/>
                    <EditText
                        android:layout_width="35sp"
                        android:layout_height="35sp"
                        android:id="@+id/code_five"
                        android:layout_toRightOf="@+id/code_four"
                        android:layout_marginLeft="10sp"
                        android:inputType="number"
                        android:background="@drawable/otp_background"
                        android:layout_marginTop="30dp"
                        android:maxLength="1"
                        android:textAlignment="center"
                        android:imeOptions="actionNext"
                        />
                    <EditText
                        android:layout_width="35sp"
                        android:layout_height="35sp"
                        android:id="@+id/code_six"
                        android:layout_toRightOf="@+id/code_five"
                        android:layout_marginLeft="10sp"
                        android:inputType="number"
                        android:background="@drawable/otp_background"
                        android:layout_marginTop="30dp"
                        android:maxLength="1"
                        android:textAlignment="center"
                        android:imeOptions="actionNext"/>

                </RelativeLayout>
                <Button
                    android:id="@+id/verfied_button_id"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/get_started_button"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="30dp"
                    android:text="Verfiy"
                    android:textAllCaps="false"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/resend_text_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resend Code"
                    android:textAlignment="center"
                    android:textColor="@color/lightblue"
                    android:drawableRight="@drawable/ic_right_arrow"
                    android:textSize="15dp"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="10dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>