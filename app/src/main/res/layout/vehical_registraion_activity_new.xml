<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:background="@drawable/screenimglogin">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/iconlogin"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cab Advertisment"
            android:gravity="center"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="130dp">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="20dp"
            card_view:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0dp">
                            <android.support.v7.widget.CardView
                                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                card_view:cardCornerRadius="20dp"
                                card_view:cardBackgroundColor="@color/white">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Vehicle Registration"
                                        android:gravity="center"
                                        android:textAlignment="center"
                                        android:textColor="@color/darkblue"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:textSize="15dp"
                                        android:layout_marginTop="25dp"
                                        android:drawableLeft="@drawable/ic_usertaxi"
                                        android:drawablePadding="15dp"
                                        android:layout_gravity="center"/>

                                    <EditText
                                        android:id="@+id/et_car_brand"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/login_view_height"
                                        android:background="@drawable/edit_background"
                                        android:layout_marginTop="30dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:hint="Car Brand"
                                        android:textColor="@color/darkblue"
                                        android:paddingLeft="20dp"
                                        android:inputType="text"
                                        android:maxLength="@integer/register_field_max_len"
                                        android:imeOptions="actionNext"
                                        android:drawablePadding="15dp"
                                        android:drawableLeft="@drawable/ic_steering_wheel"
                                        android:textSize="15dp"
                                        />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/login_view_height"
                                        android:layout_marginTop="10dp"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical"
                                        android:weightSum="2"
                                        >

                                      <!--  <TextView
                                            android:id="@+id/tv_car_model"
                                            android:layout_width="160dp"
                                            android:layout_height="@dimen/login_view_height"
                                            android:background="@drawable/edit_background"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="10dp"
                                            android:hint="Model Number"
                                            android:paddingLeft="20dp"
                                            android:gravity="center_vertical"
                                            android:textColor="@color/darkblue"
                                            android:layout_gravity="center_vertical"
                                            android:drawablePadding="15dp"
                                            android:textSize="15dp"
                                            android:drawableLeft="@drawable/ic_license_plate"/>-->

                                          <EditText
                                              android:id="@+id/et_car_model"
                                              android:layout_width="160dp"
                                                         android:layout_height="@dimen/login_view_height"
                                              android:background="@drawable/edit_background"
                                              android:layout_marginLeft="10dp"
                                              android:layout_marginRight="10dp"
                                              android:hint="Model Number"
                                              android:paddingLeft="20dp"
                                              android:inputType="text"
                                              android:textSize="15dp"
                                              android:textColor="@color/darkblue"
                                              android:imeOptions="actionNext"
                                              android:drawablePadding="15dp"
                                              android:clickable="false"
                                              android:editable="false"
                                              android:maxLength="20"
                                              android:drawableLeft="@drawable/ic_license_plate"/>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="fill_parent"
                                            android:background="@drawable/edit_background"
                                            android:padding="@dimen/margin_5"
                                            android:layout_weight="2"
                                            android:layout_marginRight="10dp"
                                            android:gravity="center_vertical"
                                            >
                                            <TextView
                                                android:id="@+id/tv_model"
                                                android:layout_width="fill_parent"
                                                android:layout_height="@dimen/login_view_height"
                                                android:background="@color/white"
                                                android:text=""
                                                android:gravity="center_vertical"
                                                android:textColor="@color/darkblue"
                                                android:textAllCaps="false"
                                                android:layout_gravity="center_vertical"
                                                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                                                android:drawablePadding="@dimen/margin_10"
                                                android:textSize="15dp"
                                                />
                                            <!-- <Spinner
                                                 android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content"
                                                 android:layout_marginLeft="50dp"
                                                 android:layout_marginTop="10dp">-->
                                            <!--</Spinner>-->
                                        </LinearLayout>

                                    </LinearLayout>

                                    <EditText
                                        android:id="@+id/et_car_registration_no"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/login_view_height"
                                        android:background="@drawable/edit_background"
                                        android:layout_marginTop="15dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:hint="Car Registration Number"
                                        android:paddingLeft="20dp"
                                        android:inputType="text"
                                        android:textColor="@color/darkblue"
                                        android:drawablePadding="15dp"
                                        android:drawableLeft="@drawable/ic_license_plate"
                                        android:imeOptions="actionNext"
                                        android:textSize="15dp"
                                        />

                                    <EditText
                                        android:id="@+id/et_address"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/login_view_height"
                                        android:background="@drawable/edit_background"
                                        android:layout_marginTop="15dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:hint="Address"
                                        android:paddingLeft="20dp"
                                        android:maxLength="@integer/add_field_max_len"
                                        android:inputType="text"
                                        android:textColor="@color/darkblue"
                                        android:imeOptions="actionNext"
                                        android:drawablePadding="15dp"
                                        android:drawableLeft="@drawable/ic_address"
                                        android:textSize="15dp"
                                        />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/login_view_height"
                                        android:layout_marginTop="10dp"
                                        android:orientation="horizontal"
                                        android:background="@drawable/edit_background"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:padding="@dimen/margin_5"
                                        android:gravity="center_vertical">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text=""
                                            android:paddingLeft="20dp"
                                            android:drawablePadding="15dp"
                                            android:drawableLeft="@drawable/ic_flag_area"
                                            android:textSize="15dp"
                                            />
                                        <!-- <ImageView
                                             android:layout_width="30dp"
                                             android:layout_height="30dp"
                                             android:src="@drawable/ic_flag_area"
                                             />-->

                                        <TextView
                                            android:id="@+id/tv_coutry"
                                            android:layout_width="fill_parent"
                                            android:layout_height="@dimen/login_view_height"
                                            android:background="#ffffff"
                                            android:text="Country"
                                            android:gravity="center_vertical"
                                            android:textColor="@color/darkblue"
                                            android:textAllCaps="false"
                                            android:textSize="15dp"
                                            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                                            android:drawablePadding="@dimen/margin_10"
                                            />
                                        <!--    <Spinner
                                                android:layout_width="30dp"
                                                android:layout_height="30dp"
                                                android:layout_marginLeft="180dp"/>-->

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/login_view_height"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginRight="10dp"
                                        android:padding="@dimen/margin_5"
                                        android:background="@drawable/edit_background"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:drawableLeft="@drawable/ic_capitol"
                                            android:drawablePadding="15dp"
                                            android:paddingLeft="20dp"
                                            android:text=""
                                            android:textSize="15dp" />
                                        <TextView
                                            android:id="@+id/tv_state"
                                            android:layout_width="fill_parent"
                                            android:layout_height="@dimen/login_view_height"
                                            android:background="@color/white"
                                            android:text="State"
                                            android:gravity="center_vertical"
                                            android:textColor="@color/darkblue"
                                            android:textAllCaps="false"
                                            android:textSize="15dp"
                                            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                                            android:drawablePadding="@dimen/margin_10"
                                            />

                                        <!--<Spinner
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_marginLeft="200dp" />-->

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/login_view_height"
                                        android:layout_marginTop="10dp"
                                        android:orientation="horizontal"
                                        android:background="@drawable/edit_background"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:padding="@dimen/margin_5"
                                        android:gravity="center_vertical">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text=""
                                            android:paddingLeft="20dp"
                                            android:drawablePadding="15dp"
                                            android:drawableLeft="@drawable/ic_company"
                                            android:textSize="15dp"
                                            />
                                        <TextView
                                            android:id="@+id/tv_city"
                                            android:layout_width="fill_parent"
                                            android:layout_height="@dimen/login_view_height"
                                            android:background="@color/white"
                                            android:text="City"
                                            android:gravity="center_vertical"
                                            android:textColor="@color/darkblue"
                                            android:textAllCaps="false"
                                            android:textSize="15dp"
                                            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                                            android:drawablePadding="@dimen/margin_10"
                                            />
                                        <!--  <Spinner
                                              android:layout_width="30dp"
                                              android:layout_height="30dp"
                                              android:layout_marginLeft="210dp"/>-->
                                    </LinearLayout>
                                    <Button
                                        android:id="@+id/bt_submit"
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:background="@drawable/get_started_button"
                                        android:layout_marginLeft="13dp"
                                        android:layout_marginRight="13dp"
                                        android:layout_marginTop="30dp"
                                        android:text="Submit"
                                        android:textAllCaps="false"
                                        android:textColor="@color/white"
                                        android:layout_marginBottom="100dp"/>
                                </LinearLayout>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>