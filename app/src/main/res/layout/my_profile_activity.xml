<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:background="@drawable/screenimglogin">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/iconlogin"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cab Advertisment"
            android:gravity="center"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="130dp">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="20dp"
            card_view:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="40dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:id="@+id/profile_pic"
                                    android:src="@drawable/ic_user" />


                                <LinearLayout
                                    android:id="@+id/ly_photo"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginRight="0dp"
                                    android:background="@drawable/camera_background">
                                    <ImageView
                                        android:id="@+id/imagepicker"
                                        android:layout_width="20dp"
                                        android:layout_height="30dp"
                                        android:layout_marginLeft="5dp"
                                        android:src="@drawable/ic_linked_camera_black_24dp"/>
                                </LinearLayout>
                            </RelativeLayout>
                            <TextView
                                android:id="@+id/tv_edit_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Edit"
                                android:textColor="@color/lightblue"
                                android:textSize="18dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_margin="5dp"
                                android:drawableRight="@drawable/ic_edit"
                                android:drawablePadding="10dp"
                                android:paddingRight="15dp"/>
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="50dp"
                            android:background="@color/white"
                            android:orientation="vertical">
                            <EditText
                                android:id="@+id/et_driver_nm"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/login_view_height"
                                android:background="@drawable/edit_background"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:hint="Name"
                                android:textColor="@color/darkblue"
                                android:paddingLeft="@dimen/margin_10"
                                android:inputType="text"
                                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ abcdefghijklmnopqrstuvwxyz"
                                android:maxLength="@integer/register_field_max_len"
                                android:textSize="15dp"
                                android:imeOptions="actionNext"
                                />
                            <EditText
                                android:id="@+id/et_driver_email"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/login_view_height"
                                android:background="@drawable/edit_background"
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:hint="Email Id"
                                android:paddingLeft="@dimen/margin_10"
                                android:maxLength="@integer/register_field_max_len"
                                android:inputType="textEmailAddress"
                                android:textColor="@color/darkblue"
                                android:imeOptions="actionNext"
                                android:textSize="15dp"
                                />
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/login_view_height"
                                android:background="@drawable/edit_background"
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:padding="5dp"
                                >
                                <ImageView
                                    android:id="@+id/iv_icon"
                                    android:layout_width="30dp"
                                    android:layout_height="fill_parent"
                                    android:src="@drawable/ic_phone_iphone_black_24dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_centerVertical="true"
                                    android:visibility="gone"
                                    />
                                <com.hbb20.CountryCodePicker
                                    android:id="@+id/spin_coun_code"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    app:ccpDialog_textColor="@color/darkblue"
                                    android:layout_toRightOf="@+id/iv_icon"
                                    app:ccp_showFlag="false"
                                    app:ccp_showNameCode="false"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="14sp"
                                    android:visibility="gone"

                                    />

                                <EditText
                                    android:id="@+id/et_driver_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="fill_parent"
                                    android:background="@color/white"
                                    android:hint="Enter Mobile Number"
                                    android:textColor="@color/darkblue"
                                    android:paddingLeft="5dp"
                                    android:inputType="number"
                                    android:maxLength="13"
                                    android:imeOptions="actionNext"
                                    android:layout_toRightOf="@+id/spin_coun_code"
                                    android:textSize="15dp"
                                    />
                            </RelativeLayout>

                        <!--    <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:background="@drawable/edit_background"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Name"
                                    android:paddingLeft="20dp"
                                    />
                            </LinearLayout>-->
                         <!--   <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal"
                                android:background="@drawable/edit_background"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Email"
                                    android:paddingLeft="20dp"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal"
                                android:background="@drawable/edit_background"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mobile Number"
                                    android:paddingLeft="20dp"
                                    />
                            </LinearLayout>-->
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ly_bottom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone"
                            >

                            <Button
                                android:id="@+id/bt_update_profile"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/get_started_button"
                                android:layout_marginLeft="13dp"
                                android:layout_marginRight="13dp"
                                android:layout_marginTop="10dp"
                                android:text="Update Profile"
                                android:textAllCaps="false"

                                android:textColor="@color/white" />
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>
